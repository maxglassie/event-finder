
<h1> <%= @event_count%> events for March </h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start Time</th>
      <th>Description</th>
      <th>Venue Name</th>
      <th>Venue Address</th>
    </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %> </td>
      <td><%= event.start_time  %></td>
      <td><%= event.description.to_s.truncate(140) %></td>
      <td><%= event.venue_name  %></td>
      <td> <%= event.venue_address  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

